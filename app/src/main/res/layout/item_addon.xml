<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/addOnImage"
            android:layout_width="134dp"
            android:layout_height="138dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corners"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/addOnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/addOnImage"
            android:text="Add-On Title"
            android:textColor="#875E2C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addOnSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addOnTitle"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/addOnImage"
            android:textColor="@color/black"
            android:text="Subheading"
            android:textStyle="bold"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/addOnDescription"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addOnSubheading"
            android:layout_alignStart="@+id/addOnSubheading"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:text="description"
            android:textAlignment="textStart"
            android:textColor="#545454"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/addOnPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/addOnDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceDetails"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addOnPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:text="Per Night\nExcluding Taxes &amp; Fees"
            android:textAlignment="textEnd"
            android:textColor="#545454"
            android:textSize="7sp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_below="@id/priceDetails"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:backgroundTint="#882065"
            android:padding="2dp"
            android:text="ADD"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>