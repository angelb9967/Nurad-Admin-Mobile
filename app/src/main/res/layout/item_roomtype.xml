<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/roomType_layout"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Title"
            android:textColor="#875E2C"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomTitle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roomTypeDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Room Accommodation | Complimentary WiFi access | Complimentary use of hotel facilities | Complimentary Valet Service"
                android:textColor="#545454"
                android:textSize="11dp" />

            <Button
                android:id="@+id/editBtn"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#882065"
                android:padding="2dp"
                android:text="EDIT"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
